<%- include('../partials/head.ejs') %>
<body>
    <div class="container">
       <div class="card mt-5">
            <div class="card-header">
                <h2>Registrar-se</h2>
            </div>
            <form action="/registro/save" method="POST">
                
                <div class="card-body">
                    <%if(erro == 0){%>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Este email já existe!</strong> O email já está cadastrado em nosso sistema!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <%}%>
                    <%if(erro == 1){%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Campo vazio!</strong> Preecha todos os campos para ser registrado em nosso sistema!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <%}%>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="digite um email para validação">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Senha</label>
                            <input type="password" name="senha" placeholder="crie uma senha" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer">      
                        <button type="submit" class="btn btn-primary">registrar-se</button> ou  
                        <a href="/login" class="btn btn-success">logar-se</a>
                    </div>
            </form>
       </div>
    </div>
</body>

