<%- include('../partials/head.ejs') %>
<body>
    <div class="container">
      
       <div class="card mt-5">
            <div class="card-header">
                <h2>logar-se</h2>
            </div>
            <form action="/autenticacao" method="POST">
                <div class="card-body">
                    <%if(erro == 0){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Dados errados!</strong> O email ou senha est√° errado!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <%}%>
                        <%if(erro == 1){%>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>Campo vazio!</strong> Preecha todos os campos para logar em nosso sistema!
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <%}%>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" placeholder="digite seu email aqui" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" name="senha" placeholder="digite sua senha aqui" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer">
                                <div class="form-group form-check">
                                    <input name="lembre" type="checkbox" class="form-check-input">
                                    <label class="form-check-label">lembre-se de mim</label>
                                </div>
                                <button type="submit" class="btn btn-primary">login</button>  ou  
                                <a href="/registro" class="btn btn-success">registre-se</a>
                    </div>
            </form>
       </div>
    </div>
</body>
<%- include('../partials/rodape.ejs') %>