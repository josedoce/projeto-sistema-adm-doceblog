      <script src="/tinymce/js/tinymce/tinymce.min.js"></script>
      <script>tinymce.init({selector:'textarea'});</script>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de artigos</h2>
                <a href="/admin/categorias"><button class="btn btn-primary btn-sm">Lista de Categorias</button></a>
                <a href="/admin/artigos"><button class="btn btn-primary btn-sm">Lista de Artigos</button></a>
            </div>
            <form method="POST" action="/admin/artigo/save">
                <div class="card-body">
                    <%if(erro == 0){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Campos vazios! </strong>Preencha todos os campos para continuar!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                    <%if(erro == 1){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Campo titulo vazio! </strong>Preencha o campo de titulo para continuar!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                    <%if(erro == 2){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Campo conteudo do artigo vazio! </strong>Preencha o campo de artigo para continuar!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                    <%if(erro == 3){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Campo categoria do artigo vazio! </strong>Preencha o campo de categoria para continuar!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                    <%if(erro == 4){%>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Artigo criado! </strong>Artigo disponivel para visualização!
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                    <label>Defina o titulo do artigo</label>
                    <input class="form-control" type="text" name="titulo" placeholder="Defina o título do artigo aqui">
                    <br>
                    <label>Defina o conteudo do artigo</label>
                    <textarea id="criarArtigo" value="" class="form-control" placeholder="Crie o conteudo do seu artigo aqui..." name="body"></textarea>
                    <label>Selecione a categoria do artigo</label>
                    <select name="categoriaArtigo" class="custom-select custom-select-sm">
                        <option disabled selected>Selecione uma opção</option>
                        <%cat.forEach((itemSelect)=>{%>
                            <option value="<%=itemSelect.id%>"><%=itemSelect.titulo%></option>
                        <%})%>
                    </select>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Criar Artigo</button>
                </div>
            </form>
        </div>
    </div>
</body>


